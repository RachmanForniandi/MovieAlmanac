<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation">

    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.example.moviealmanac.movies.MoviesFragment"
        android:label="Movies"
        tools:layout="@layout/movies_fragment">

        <action
            android:id="@+id/action_navigation_movies_to_navigation_details"
            app:destination="@id/navigation_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_tv_shows"
        android:name="com.example.moviealmanac.tvShow.TvShowFragment"
        android:label="Tv Shows"
        tools:layout="@layout/tv_show_fragment">

        <action
            android:id="@+id/action_navigation_tv_shows_to_navigation_details"
            app:destination="@id/navigation_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_details"
        android:name="com.example.moviealmanac.details.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/detail_fragment">

    </fragment>


</navigation>